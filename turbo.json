{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^preDev"],
      "outputs": [".next/**", "!.next/cache/**", "dist"]
    },
    "lint": {},
    "preDev": {
      "inputs": ["*.ts"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["^preDev"],
      "cache": false,
      "persistent": true
    }
  }
}
